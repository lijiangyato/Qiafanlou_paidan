<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/regist_topLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentTop="true"
        android:background="#FFFAFA"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/findok_backToLoginIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="15dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/regist_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/findpwd"
            android:textSize="@dimen/txt_16"
            android:textStyle="bold" />
    </LinearLayout>

    <include
        android:id="@+id/regist_divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_topLL"
        layout="@layout/divider_line" />

    <LinearLayout
        android:id="@+id/login_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_divide"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/changeok_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="@string/changepwdok"
                android:textSize="@dimen/txt_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/findok_backToLoginTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:clickable="true"
                android:text="@string/changepwdgobacktologin"
                android:textSize="@dimen/txt_12"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>